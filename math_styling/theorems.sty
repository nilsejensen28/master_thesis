\ProvidesPackage{theorems}

%----------------------------------------------------------------------------------------
%	PACKAGE OPTIONS AND DEPENDENCIES
%----------------------------------------------------------------------------------------
\let\openbox\relax
\RequirePackage{amsmath} % For including equations
\RequirePackage{amssymb} % For including symbols
\RequirePackage{amsthm} % For including theorems
\RequirePackage{thmtools} % For including theorems

%------------------------------------------------

% Black theorem number and optional black title padding above and below
\newtheoremstyle{blacknumbox} % Theorem style name
	{0pt} % Space above
	{0pt} % Space below
	{\normalfont} % Body font
	{} % Indent amount
	{} % Theorem head font
	{} % Punctuation after theorem head
	{0.25em} % Space after theorem head
	{\sffamily\bfseries\thmname{#1}~\thmnumber{\@ifnotempty{#1}{}\@upn{#2}} % Theorem text (e.g. Theorem 2.1)
	\thmnote{\sffamily\bfseries---~#3.\hspace{0.25em}}\newline} % Optional theorem note

%------------------------------------------------

% Black theorem number and optional black title with padding above and below
\theoremstyle{blacknumbox}
\newtheorem{definitionT}{Definition}[chapter] % Definitions, the first argument is the theorem name, the second the theorem title used before the number and the third optional argument is whether to number under chapters (e.g. 2.1) or sections (e.g. 2.1.1)
\newtheorem{theoremT}{Theorem}[chapter]

%----------------------------------------------------------------------------------------
%	COLORED THEOREM BOXES
%----------------------------------------------------------------------------------------

\RequirePackage{tcolorbox} % Required for colored boxes

% Definition box
\newtcolorbox{dBox}{colback=gray!5!white,colframe=black,boxrule=0.5pt,arc=4pt,boxsep=0pt,left=6pt,right=6pt,top=6pt,bottom=6pt,tcbox raise base}

%Problem box
\newtcolorbox{pBox}{colback=gray!5!white,colframe=black,boxrule=0.5pt,arc=4pt,boxsep=0pt,left=6pt,right=6pt,top=6pt,bottom=6pt,tcbox raise base}


\newenvironment{definition}{\begin{dBox}\begin{definitionT}}{\end{definitionT}\end{dBox}}
\newenvironment{theorem}{\begin{dBox}\begin{theoremT}}{\end{theoremT}\end{dBox}}

%----------------------------------------------------------------------------------------
%	Problem definitions
%----------------------------------------------------------------------------------------

\newcommand{\problem}[3]{
	\begin{pBox}
		{\scshape\bfseries #1} \par
		{\bfseries Input: } #2 \par
		{\bfseries Output: } #3
	\end{pBox}
}
